{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "build",
    "outDir": "build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "jsx": "react",
    "isolatedModules": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "public",
    "./src/**/*.stories.tsx",
    "./src/**/*.stories.ts"
  ]
}
